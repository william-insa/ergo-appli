        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="60" Margin="267,10,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="832"/>

        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="60" Margin="10,10,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="252"/>

        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="60" Margin="1104,10,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="252"/>


        <Rectangle x:Name="MainBar" Fill="{ThemeResource AppBarItemPointerOverForegroundThemeBrush}" HorizontalAlignment="Left" Height="141" VerticalAlignment="Top" Width="1346" Margin="10,615,0,0" Grid.Row="1"/>
