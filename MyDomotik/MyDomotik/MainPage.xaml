        <TextBlock x:Name="TimeBox_Copy" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="832" FontSize="30" TextAlignment="Center" FontFamily="Segoe UI" Margin="267,10,0,0" Grid.Row="1" >
    		<Run Foreground="Black" Text="Pièces de la maison"/>
